<h1>Add Study Material to <%= @group.name %></h1>

<%= form_with model: [:admin, @group, @study_material], local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <div>
    <%= f.label :file_data, 'File URL' %>
    <%= f.text_field :file_data %>
  </div>
  
  <div>
    <%= f.label :tag_list, 'Tags (comma separated)' %>
    <%= f.text_field :tag_list %>
  </div>
  
  <%= f.submit 'Add Material' %>
<% end %>

<%= link_to 'Back', admin_group_students_path(@group) %>