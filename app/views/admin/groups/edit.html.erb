<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2>Edit Group</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: [:admin, @group], local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "Update Group", class: "btn btn-primary" %>
              <%= link_to "Cancel", admin_groups_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 