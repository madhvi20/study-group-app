<div class="card mb-3">
  <div class="card-header">
    <h3>Add Student to Group</h3>
  </div>
  <div class="card-body">
    <%= form_with(url: add_student_admin_group_path(@group), local: true, method: :post) do |f| %>
      <div class="mb-3">
        <%= f.label :student_id, "Select Student", class: "form-label" %>
        <%= f.select :student_id, 
            User.student.where.not(id: @group.students.pluck(:id)).collect { |s| [s.email, s.id] },
            { include_blank: "Choose a student..." },
            { class: "form-select" } 
        %>
      </div>
      <%= f.submit "Add Student", class: "btn btn-success" %>
    <% end %>
  </div>
</div> 